<!DOCTYPE html>
<html>
<head>
  <title>JobBoard</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar">
  <div class="navbar-inner">    
    <%= link_to 'Job Board', root_path, { :class => 'brand' } %>
    <ul class="nav">
      <li class="active">
        <%= link_to root_path do %>
          <i class="icon-star-empty"></i> Premium
        <% end %>  
      </li>
      <li>
        <%= link_to jobs_path do %>
          <i class="icon-star"></i> All jobs
        <% end %>
      </li>
      <li>
        <%= link_to new_job_path do %>
          <i class="icon-file"></i> New job
        <% end %>
      </li>         
      <li>
        <%= link_to hello_world_path do %>
          <i class="icon-flag"></i> Hello World
        <% end %>
      </li>         
    </ul>
  </div>
</div>

<div class="container">
  <%= yield %>
</div>

</body>
</html>
